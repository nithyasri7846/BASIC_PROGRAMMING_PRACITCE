class ListNode:
    def __init__(self, val=0, next=None):
        self.val = val
        self.next = next

class Solution:
    def mergeTwoLists(self, list1: ListNode, list2: ListNode) -> ListNode:
        # Dummy node to start the merged list
        dummy = ListNode(-1)
        current = dummy

        # Traverse both lists
        while list1 and list2:
            if list1.val <= list2.val:
                current.next = list1
                list1 = list1.next
            else:
                current.next = list2
                list2 = list2.next
            current = current.next

        # Append the rest of the list that is not exhausted
        if list1:
            current.next = list1
        else:
            current.next = list2

        return dummy.next  # First node of merged list
